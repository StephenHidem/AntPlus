<UserControl x:Class="AntPlusUsbClient.Controls.TreadmillControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AntPlusUsbClient.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Expander>
            <Expander.Header>
                <TextBlock Text="Treadmill" FontWeight="ExtraBold"/>
            </Expander.Header>
            <StackPanel>
                <TextBlock Text="{Binding Cadence, StringFormat='Cadence: {0}'}"/>
                <TextBlock Text="{Binding NegVerticalDistance, StringFormat='NegVerticalDistance: {0}'}"/>
                <TextBlock Text="{Binding PosVerticalDistance, StringFormat='PosVerticalDistance: {0}'}"/>
            </StackPanel>
        </Expander>
    </Grid>
</UserControl>
