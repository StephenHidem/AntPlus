<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ant="clr-namespace:SmallEarthTech.AntPlus.DeviceProfiles.FitnessEquipment;assembly=SmallEarthTech.AntPlus"
             x:DataType="ant:TrainerStationaryBike"
             x:Class="MauiAntGrpcClient.Views.FitnessEquipment.TrainerStationaryBikeView">
    <VerticalStackLayout>
        <Label Text="Trainer Stationary Bike" FontAttributes="Bold" TextDecorations="Underline"/>
        <Label Text="{Binding AveragePower, StringFormat='Average Power: {0}'}"/>
        <Label Text="{Binding InstantaneousPower, StringFormat='Instantaneous Power: {0}'}"/>
        <Label Text="{Binding InstantaneousCadence, StringFormat='Instantaneous Cadence: {0}'}"/>
        <Label Text="{Binding TargetPower, StringFormat='Target Power: {0}'}"/>
        <Label Text="{Binding TrainerStatus, StringFormat='Trainer Status: {0}'}"/>
    </VerticalStackLayout>
</ContentView>
