<Window x:Class="AntPlusUsbClient.Views.UnknownDeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AntPlusUsbClient.Views"
        xmlns:viewmodels="clr-namespace:AntPlusUsbClient.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:UnknownDeviceViewModel}"
        xmlns:converters="clr-namespace:AntPlusUsbClient.Converters"
        mc:Ignorable="d"
        Title="UnknownDeviceWindow" Height="450" Width="322">
    <Window.Resources>
        <converters:ByteArrayToString x:Key="ByteToStr"/>
    </Window.Resources>
    <Grid Margin="10">
        <ListView ItemsSource="{Binding UnknownDevice.DataPages}">
            <ListView.View>
                <GridView >
                    <GridViewColumn Header="Data Page" Width="300" DisplayMemberBinding="{Binding Page, Converter={StaticResource ByteToStr}}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
