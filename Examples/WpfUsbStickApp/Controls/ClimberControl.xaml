<UserControl x:Class="WpfUsbStickApp.Controls.ClimberControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfUsbStickApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="White">
    <Grid>
        <GroupBox Header="Climber">
            <StackPanel>
                <TextBlock Text="{Binding Climber.StrideCycles, StringFormat='Stride Cycles: {0}'}"/>
                <TextBlock Text="{Binding Climber.Cadence, StringFormat='Cadence: {0}'}"/>
                <TextBlock Text="{Binding Climber.InstantaneousPower, StringFormat='Instantaneous Power: {0}'}"/>
                <TextBlock Text="{Binding State, StringFormat='State: {0}'}"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
