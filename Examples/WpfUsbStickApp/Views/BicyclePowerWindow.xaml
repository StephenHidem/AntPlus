<Window x:Class="WpfUsbStickApp.Views.BicyclePowerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUsbStickApp.Views"
        xmlns:viewmodels="clr-namespace:WpfUsbStickApp.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:BicyclePowerViewModel}"
        xmlns:dp="clr-namespace:SmallEarthTech.AntPlus.DeviceProfiles.BicyclePower;assembly=AntPlus"
        xmlns:uc="clr-namespace:WpfUsbStickApp.Controls"
        mc:Ignorable="d"
        Title="{Binding SensorType, StringFormat='Bicycle Power - {0}'}"
        SizeToContent="WidthAndHeight"
        Icon="{Binding BicyclePower.DeviceImageStream, Mode=OneWay}">
    <Grid Margin="10">
        <StackPanel>
            <StackPanel x:Name="BicyclePowerControl"/>
        </StackPanel>
        <TextBlock Text="OFFLINE" HorizontalAlignment="Center" FontSize="48" FontWeight="ExtraBold" Visibility="{Binding BicyclePower.Offline, Converter={StaticResource BoolToVisibility}}"/>
    </Grid>
</Window>
