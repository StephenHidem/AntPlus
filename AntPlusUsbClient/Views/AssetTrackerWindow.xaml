<Window x:Class="AntPlusUsbClient.Views.AssetTrackerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AntPlusUsbClient.Views"
        xmlns:viewmodels="clr-namespace:AntPlusUsbClient.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:AssetTrackerViewModel}"
        mc:Ignorable="d"
        Title="AssetTrackerWindow" Height="450" Width="309">
    <Grid>
        <Expander>
            <Expander.Header>
                <TextBlock Text="{Binding AssetTracker.Assets.Count, StringFormat='Assets - {0}'}" d:Text="Assets - 0"/>
            </Expander.Header>
            <ListView ItemsSource="{Binding AssetTracker.Assets}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Expander>
    </Grid>
</Window>
