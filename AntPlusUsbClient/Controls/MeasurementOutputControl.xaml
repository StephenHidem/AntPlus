<UserControl x:Class="AntPlusUsbClient.Controls.MeasurementOutputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AntPlusUsbClient.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Content="Measurement Output" FontWeight="DemiBold"/>
        <TextBlock Text="{Binding NumberOfMeasurementTypes, StringFormat='Number of types {0}'}"/>
        <TextBlock Text="{Binding MeasurementType, StringFormat='Measurement Type {0}'}"/>
        <TextBlock Text="{Binding Measurement, StringFormat='Measurement {0}'}"/>
        <TextBlock Text="{Binding Timestamp, StringFormat='Timestamp {0}'}"/>
    </Grid>
</UserControl>
